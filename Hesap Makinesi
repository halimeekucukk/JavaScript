        <script>
        // JavaScript fonksiyonları
        function ekle(sayi) {
            document.getElementById("ekran").value += sayi;
        }

        function temizle() {
            document.getElementById("ekran").value = '';
        }

        function sil() {
            var ekranDegeri = document.getElementById("ekran").value;
            document.getElementById("ekran").value = ekranDegeri.slice(0, -1);
        }

        function hesapla() {
            var ekranDegeri = document.getElementById("ekran").value;
            var sonuc = eval(ekranDegeri);
            document.getElementById("ekran").value = sonuc;
        }
    </script>






