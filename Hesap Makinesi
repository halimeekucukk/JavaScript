    <div class="kenarlikliDiv">
        
        <form id="hesapMakinesiForm">
            <input type="text" id="ekran" readonly>
            
            <button type="button" onclick="temizle()">C</button> <br>
            <button type="button" onclick="ekle('1')">1</button>
            <button type="button" onclick="ekle('2')">2</button>
            <button type="button" onclick="ekle('3')">3</button>
            <button type="button" onclick="ekle('/')">/</button> <br>

            <button type="button" onclick="ekle('4')">4</button>
            <button type="button" onclick="ekle('5')">5</button>
            <button type="button" onclick="ekle('6')">6</button>
            <button type="button" onclick="ekle('-')">-</button><br>
            
            <button type="button" onclick="ekle('7')">7</button>
            <button type="button" onclick="ekle('8')">8</button>
            <button type="button" onclick="ekle('9')">9</button>
            <button type="button" onclick="ekle('+')">+</button><br>

            <button type="button" onclick="ekle('.')">.</button>
            <button type="button" onclick="ekle('0')">0</button>
            <button type="button" onclick="hesapla()">=</button>
            <button type="button" onclick="ekle('*')">*</button>
            
